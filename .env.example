# Database Configuration
# Copy this file to .env and fill in your actual values

# Neon Cloud Database (Recommended)
DATABASE_URL="postgresql://username:password@ep-example.us-east-1.aws.neon.tech/neondb?sslmode=require"

# OR Local PostgreSQL Database
# DATABASE_URL="postgresql://username:password@localhost:5432/roadmap_app"

# PostgreSQL Connection Details
PGHOST="your-host"
PGDATABASE="your-database-name"
PGUSER="your-username"
PGPASSWORD="your-password"
PGPORT="5432"

# Application Environment
NODE_ENV="development"

# Optional: Add any other environment variables your app might need
# VITE_API_BASE_URL="http://localhost:5000"